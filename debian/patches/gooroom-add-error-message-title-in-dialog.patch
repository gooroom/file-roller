From f939c95b98b513bb230d12c51a7a0b4925f9a255 Mon Sep 17 00:00:00 2001
From: donghun <donghun@gooroom.kr>
Date: Sat, 19 Feb 2022 18:09:12 +0900
Subject: [PATCH] Added error message title in dialog

---
 po/ko.po          | 10 +++++++++-
 src/dlg-extract.c |  1 +
 src/fr-window.c   |  2 ++
 src/gtk-utils.c   |  5 +++++
 4 files changed, 17 insertions(+), 1 deletion(-)

diff --git a/po/ko.po b/po/ko.po
index e2715ce..175274b 100644
--- a/po/ko.po
+++ b/po/ko.po
@@ -323,7 +323,7 @@ msgstr "폴더 만들기(_F)"
 #: src/fr-window.c:4410 src/fr-window.c:6844 src/fr-window.c:6849
 #: src/fr-window.c:6949 src/fr-window.c:6968 src/fr-window.c:6973
 msgid "Extraction not performed"
-msgstr "풀 수 없었습니다"
+msgstr "풀 수 없습니다"
 
 #: src/dlg-extract.c:123 src/fr-window.c:6945
 #, c-format
@@ -1436,6 +1436,14 @@ msgstr "파일 개수:"
 msgid "S_elect the files you want to update:"
 msgstr "업데이트할 파일 선택(_E):"
 
+#: src/dlg-extract.c:144 src/fr-window.c:2943 src/gtk-utils.c:273 src/gtk-utils.c:305
+msgid "Error"
+msgstr "오류"
+
+#: src/gtk-utils.c:101
+msgid "Info"
+msgstr "정보"
+
 #~| msgid "Archive Manager"
 #~ msgid "org.gnome.ArchiveManager"
 #~ msgstr "org.gnome.ArchiveManager"
diff --git a/src/dlg-extract.c b/src/dlg-extract.c
index 21227a5..ab1f984 100644
--- a/src/dlg-extract.c
+++ b/src/dlg-extract.c
@@ -141,6 +141,7 @@ extract_cb (GtkWidget   *w,
 					     _GTK_LABEL_CLOSE, GTK_RESPONSE_OK,
 					     NULL);
 		gtk_dialog_set_default_response (GTK_DIALOG (d), GTK_RESPONSE_OK);
+		gtk_window_set_title (GTK_WINDOW (d), _("Error"));
 		gtk_dialog_run (GTK_DIALOG (d));
 		gtk_widget_destroy (GTK_WIDGET (d));
 
diff --git a/src/fr-window.c b/src/fr-window.c
index 4b07f04..59a063e 100644
--- a/src/fr-window.c
+++ b/src/fr-window.c
@@ -2939,6 +2939,8 @@ fr_window_show_error_dialog (FrWindow   *window,
 			  window);
 	if (dialog_parent != NULL)
 		gtk_window_set_modal (GTK_WINDOW (dialog), TRUE);
+
+	gtk_window_set_title (GTK_WINDOW (dialog), _("Error"));
 	gtk_widget_show (dialog);
 
 	window->priv->showing_error_dialog = TRUE;
diff --git a/src/gtk-utils.c b/src/gtk-utils.c
index 5805bbb..b22c67c 100644
--- a/src/gtk-utils.c
+++ b/src/gtk-utils.c
@@ -97,6 +97,8 @@ _gtk_message_dialog_new (GtkWindow      *parent,
 
 	va_end (args);
 
+	gtk_window_set_title (GTK_WINDOW (dialog), _("Info"));
+
 	return dialog;
 }
 
@@ -270,6 +272,8 @@ _gtk_error_dialog_new (GtkWindow      *parent,
 		gtk_widget_show_all (output_box);
 	}
 
+	gtk_window_set_title (GTK_WINDOW (dialog), _("Error"));
+
 	return dialog;
 }
 
@@ -300,6 +304,7 @@ _gtk_error_dialog_run (GtkWindow  *parent,
 			  G_CALLBACK (gtk_widget_destroy),
 			  NULL);
 
+	gtk_window_set_title (GTK_WINDOW (d), _("Error"));
 	gtk_widget_show (d);
 }
 
