From e3b8cd326e841afc4d5c8e0a83c9ba956cf8be5e Mon Sep 17 00:00:00 2001
From: donghun <donghun@gooroom.kr>
Date: Fri, 31 Jul 2020 11:25:12 +0900
Subject: [PATCH] Changed the nautilus to the nemo and Remove the nautilus
 extension dependency

Change-Id: I3a15e9c965786f77c1cfedd887accab58c2f4637
---
 meson_options.txt |  2 +-
 src/fr-window.c   | 22 +++++++++++-----------
 src/preferences.h |  4 ++--
 3 files changed, 14 insertions(+), 14 deletions(-)

diff --git a/meson_options.txt b/meson_options.txt
index 52c6e36..c6f2110 100644
--- a/meson_options.txt
+++ b/meson_options.txt
@@ -6,7 +6,7 @@ option('run-in-place',
 
 option('nautilus-actions',
   type : 'boolean', 
-  value : true, 
+  value : false,
   description : 'Build the nautilus context menu actions'
 )
 
diff --git a/src/fr-window.c b/src/fr-window.c
index 2b737e3..2856cf7 100644
--- a/src/fr-window.c
+++ b/src/fr-window.c
@@ -368,7 +368,7 @@ struct _FrWindowPrivate {
 	GSettings        *settings_ui;
 	GSettings        *settings_general;
 	GSettings        *settings_dialogs;
-	GSettings        *settings_nautilus;
+	GSettings        *settings_nemo;
 
 	gulong            theme_changed_handler_id;
 	gboolean          update_dropped_files;
@@ -566,7 +566,7 @@ fr_window_free_private_data (FrWindow *window)
 	_g_object_unref (window->priv->settings_ui);
 	_g_object_unref (window->priv->settings_general);
 	_g_object_unref (window->priv->settings_dialogs);
-	_g_object_unref (window->priv->settings_nautilus);
+	_g_object_unref (window->priv->settings_nemo);
 
 	_g_object_unref (window->priv->cancellable);
 	g_hash_table_unref (window->priv->named_dialogs);
@@ -4469,7 +4469,7 @@ context_offers_target (GdkDragContext *context,
 
 
 static gboolean
-nautilus_xds_dnd_is_valid_xds_context (GdkDragContext *context)
+nemo_xds_dnd_is_valid_xds_context (GdkDragContext *context)
 {
 	gboolean ret = FALSE;
 
@@ -4623,7 +4623,7 @@ fr_window_folder_tree_drag_data_get (GtkWidget        *widget,
 		return TRUE;
 	}
 
-	if (! nautilus_xds_dnd_is_valid_xds_context (context))
+	if (! nemo_xds_dnd_is_valid_xds_context (context))
 		return FALSE;
 
 	uri  = get_xds_atom_value (context);
@@ -4719,7 +4719,7 @@ fr_window_file_list_drag_data_get (FrWindow         *window,
 		return TRUE;
 	}
 
-	if (! nautilus_xds_dnd_is_valid_xds_context (context))
+	if (! nemo_xds_dnd_is_valid_xds_context (context))
 		return FALSE;
 
 	uri = get_xds_atom_value (context);
@@ -4953,10 +4953,10 @@ is_single_click_policy (FrWindow *window)
 	char     *value;
 	gboolean  result;
 
-	if (window->priv->settings_nautilus == NULL)
+	if (window->priv->settings_nemo == NULL)
 		return FALSE;
 
-	value = g_settings_get_string (window->priv->settings_nautilus, NAUTILUS_CLICK_POLICY);
+	value = g_settings_get_string (window->priv->settings_nemo, NEMO_CLICK_POLICY);
 	result = (value != NULL) && (strncmp (value, "single", 6) == 0);
 	g_free (value);
 
@@ -5535,7 +5535,7 @@ fr_window_construct (FrWindow *window)
 	window->priv->settings_ui = g_settings_new (FILE_ROLLER_SCHEMA_UI);
 	window->priv->settings_general = g_settings_new (FILE_ROLLER_SCHEMA_GENERAL);
 	window->priv->settings_dialogs = g_settings_new (FILE_ROLLER_SCHEMA_DIALOGS);
-	window->priv->settings_nautilus = _g_settings_new_if_schema_installed (NAUTILUS_SCHEMA);
+	window->priv->settings_nemo = _g_settings_new_if_schema_installed (NEMO_SCHEMA);
 
 	/* Create the application. */
 
@@ -5970,9 +5970,9 @@ fr_window_construct (FrWindow *window)
 			  G_CALLBACK (pref_list_mode_changed),
 			  window);
 
-	if (window->priv->settings_nautilus)
-		g_signal_connect (window->priv->settings_nautilus,
-				  "changed::" NAUTILUS_CLICK_POLICY,
+	if (window->priv->settings_nemo)
+		g_signal_connect (window->priv->settings_nemo,
+				  "changed::" NEMO_CLICK_POLICY,
 				  G_CALLBACK (pref_click_policy_changed),
 				  window);
 
diff --git a/src/preferences.h b/src/preferences.h
index ed0fbe2..f078781 100644
--- a/src/preferences.h
+++ b/src/preferences.h
@@ -70,8 +70,8 @@
 #define PREF_NEW_ENCRYPT_HEADER           "encrypt-header"
 #define PREF_NEW_VOLUME_SIZE              "volume-size"
 
-#define NAUTILUS_SCHEMA                   "org.gnome.nautilus.preferences"
-#define NAUTILUS_CLICK_POLICY             "click-policy"
+#define NEMO_SCHEMA                       "org.nemo.preferences"
+#define NEMO_CLICK_POLICY                 "click-policy"
 
 void  pref_util_save_window_geometry    (GtkWindow  *window,
 					 const char *dialog_id);
-- 
2.20.1

